section#game
  
  .lcm
    text-align: center
  
  .outer-square
    padding: 15px

  .square
    width: 100%
    padding-bottom: 100%
    background-color: green
  
    .square-content
      position: absolute
      width: 100%
      height: 100%
      padding-right: 30px

      .inner-square
        position: relative
        top: 25%
        left: 25%
        width: 50%
        padding-bottom: 50%
        transform: translateY(-7.5px)
        background-color: orchid

        .inner-square-content
          width: 100%
          height: 100%
          position: absolute
          display: flex
          align-items: center
          text-align: center
          
          .wrapper
            width: 100%
